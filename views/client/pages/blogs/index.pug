extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-3
   .row
      .col-12
        +box-head("Danh sách bài viết")
   .row
    each item in posts
      .col-4.mb-3
        .product-item
            .inner-image
              img(src=item.thumbnail, 
              alt=item.title, srcset="")
            .inner-content
              h3.inner-title #{item.title}
                a(href=`/blogs/${item.slug}`
                  ) #{item.title}
              .inner-price-new !{item.description}
              if(item.postCategory.title)
                .inner-price-new #{item.postCategory.title}
       

