extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug
block main
  +alertSuccess(5000)
  .container.my-3
    .row
      .col-12
        +box-head("Thông tin tài khoản")
        
        if(user.email)
            h5(class="mb-4") Email: #{user.email}
    .row 
      form(action=`/user/info/${user._id}?_method=PATCH`
            id="form-edit-product"
            method="POST"
            enctype="multipart/form-data"
            )
            div(class="form-group")
                label(for="fullName") Họ tên *
                input(
                    type="text"
                    class="form-control"
                    id="fullName"
                    name="fullName"
                    
                    value=user.fullName
                )
            div(class="form-group")
                label(for="email") Email *
                input(
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    
                    value=user.email
                    readonly
                )
            
            div(class="form-group")
                label(for="password") Mật khẩu *
                input(
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                    
                    value=user.password
                )
            
            
            div(class="form-group")
                label(for="phone") Số điện thoại 
                input(
                    type="text"
                    class="form-control"
                    id="phone"
                    name="phone"
                    value=user.phone
                )
        
            
            div(class="form-group"
                upload-image)
                label(for="avatar") Avatar
                input(
                    type="file"
                    class="form-control-file"
                    id="avatar"
                    name="avatar"
                    accept="image/*"
                    upload-image-input
                )
                img(
                src=user.avatar
                upload-image-preview
                class = "image-preview"
                )
            div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật
    
       

   

