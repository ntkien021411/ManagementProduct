extends ../../layouts/default.pug
include ../../mixins/filterStatus.pug
include ../../mixins/search.pug
include ../../mixins/alert.pug
include ../../mixins/sort.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/tableCategory.pug
block main
    +alertError(5000)
    +alertSuccess(5000)
      //- if(role.permissions.includes("products-category_view"))
    h1 Danh mục bài viết

    .card.mb-3 
        .card-header Bộ lọc và Tìm kiếm 
        .card-body
          .row 
            .col-6
              +filterStatus(filterStatus) 
            .col-6
              +searchForm(keyword)
    .card.mb-3
        .card-header Sắp xếp
        .card-body
          .row 
            .col-4 
              +sortRole()
    .card.mb-3 
        .card-header Danh sách 
        .card-body
          .row 
            .col-8
                //- if(role.permissions.includes("products-category_edit")) 
                +form-change-multi(
                `${prefixAdmin}/posts-category/change-multi?_method=PATCH`
                )
            .col-4
                //- if(role.permissions.includes("products-category_create"))
                a(
                  href=`${prefixAdmin}/posts-category/create`
                  class = "btn btn-outline-success"
                ) + Thêm mới

          table(class="table table-hover table-sm mt-2"
                checkbox-multi) 
            thead
              tr
                th 
                  input(type="checkbox" name="checkall" )
                th STT
                th Hình ảnh
                th Tiêu đề
                th Trạng thái
                th Người tạo
                th Người cập nhật
                th Hành động 
            tbody
              +tableCategoryPost(records) 
              
        //- +pagination(pagination)
        if(role.permissions.includes("products-category_edit"))
          form(action="" 
                method="POST"
                id="form-change-status"
                data-path=`${prefixAdmin}/posts-category/change-status`)
        if(role.permissions.includes("products-category_delete"))
          form(action="" 
                method="POST"
                id="form-delete-item"
                data-path=`${prefixAdmin}/posts-category/delete`)
          
    //- else 
    //-   h1 Bạn không có quyền trong trang này!
    