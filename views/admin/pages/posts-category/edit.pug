extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug
block main
    +alertError(5000)
    +alertSuccess(5000)
    if(role.permissions.includes("products-category_edit"))
        h1(class="mb-4") Chỉnh sửa danh mục bài viết

        form(action=`${prefixAdmin}/posts-category/edit/${postCategory._id}?_method=PATCH`
            id="form-edit-product"
            method="POST"
            enctype="multipart/form-data"
            )
            div(class="form-group")
                label(for="title") Tiêu đề
                input(
                    type="text"
                    class="form-control"
                    id="title"
                    name="title"
                    value=postCategory.title
                    required
                )
            label(for="parent_id") Danh mục cha
            select(
                    name ="parent_id"
                    id="parent_id"
                    class="form-control"
                )  
                option(value="") -- Chọn danh mục cha --  
                +selectTree(records,1,postCategory.parent_id)
            div(class="form-group")
                label(for="desc") Mô tả
                textarea(
                    class="form-control textarea-mce"
                    id="desc"
                    name="description"
                    row="5"
                    value=postCategory.description
                ) #{postCategory.description}
            
            div(class="form-group"
                upload-image)
                label(for="thumbnail") Ảnh
                input(
                    type="file"
                    class="form-control-file"
                    id="thumbnail"
                    name="thumbnail"
                    accept="image/*"
                    upload-image-input
                )
                img(src=postCategory.thumbnail
                upload-image-preview
                class = "image-preview"
                )
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusActive"
                    name="status"
                    value="active"
                    checked = (postCategory.status=="active" ? true : false)
                )
                label(for="statusActive" class="form-check-label") Hoạt động
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusInActive"
                    name="status"
                    value="inactive"
                    checked = (postCategory.status=="inactive" ? true : false)
                )
                label(for="statusInActive" class="form-check-label") Dừng hoạt động
            div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật
    else    
        h1 Bạn không có quyền trong trang này!
