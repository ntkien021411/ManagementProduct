extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/block-dashboard.pug
block main
    +alertError(5000)
    +alertSuccess(5000)
    h1 Trang tổng quan

    .row.mt-4 
        .col-12 
            .card.mb-4 
                .card-header Thông tin tài khoản 
                .card-body 
                    if(user.avatar)
                        img(
                            src=user.avatar 
                            style="height:100px;margin-bottom:15px"
                        )
                    if(user.fullName)
                        p Họ tên: <b>#{user.fullName}</b>
                    if(user.email)
                        p Email: <b>#{user.email}</b>
                    if(user.phone)
                        p Số điện thoại: <b>#{user.phone}</b>
                    if(role.title)
                        p Phân quyền: <b>#{role.title}</b>

        +block(statistic.categoryProduct,"Danh mục sản phẩm")
        +block(statistic.product,"Sản phẩm")
        +block(statistic.account,"Tài khoản admin")
        +block(statistic.user,"Tài khoản client")
        
    //- div #{user}
    //- div #{role}